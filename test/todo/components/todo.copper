
<cu-todo>
	<todo-title :count="todo.length"></todo-title>
	<div>
		<input
			type="text"
			:value.sync="new_todo_title"
			>
		<input
			type="button"
			value="Add"
			@click="addTodo()"
			>
	</div>
	<cu if="todo.length > 0">
		<todo-list
			:todo="todo"
			@remove="todo.splice($event, 1)"
			>
		</todo-list>
	</cu>
	<cu else>
		<i>No tasks to do.</i>
	</cu>
</cu-todo>

<script type="module">
	import { ref, reactive } from 'copper';
	import TodoTitle from '/test/todo/dist/components/todo-title.js';
	import TodoList from '/test/todo/dist/components/todo-list.js';

	const new_todo_title = ref('');
	const todo = reactive([]);

	function addTodo() {
		todo.push({
			id: Date.now(),
			title: new_todo_title.value,
		});
		new_todo_title.value = '';
	}
</script>

<style>
	cu-todo {
		display: block;
		padding: 10px;
		border: 1px solid #ccc;
		border-radius: 5px;
	}
</style>
